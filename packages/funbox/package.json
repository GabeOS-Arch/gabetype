{
  "name": "@gabetype/funbox",
  "private": true,
  "scripts": {
    "dev": "tsup-node --watch",
    "build": "npm run madge && tsup-node",
    "test": "vitest run",
    "madge": " madge --circular --extensions ts ./src",
    "ts-check": "tsc --noEmit",
    "eslint": "eslint \"./src/**/*.ts\"",
    "oxlint": "oxlint .",
    "lint": "npm run oxlint && npm run eslint"
  },
  "devDependencies": {
    "@gabetype/eslint-config": "workspace:*",
    "@gabetype/schemas": "workspace:*",
    "@gabetype/tsup-config": "workspace:*",
    "@gabetype/typescript-config": "workspace:*",
    "eslint": "8.57.1",
    "madge": "8.0.0",
    "oxlint": "1.15.0",
    "tsup": "8.4.0",
    "typescript": "5.5.4",
    "vitest": "3.2.4"
  },
  "dependencies": {
    "@gabetype/util": "workspace:*"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
