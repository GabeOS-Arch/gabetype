{
  "name": "aitype",
  "license": "GPL-3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "full-check": "turbo lint ts-check build test integration-test validate-json --force",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "ts-check": "turbo run ts-check",
    "lint": "turbo run lint",
    "lint-be": "turbo run lint --filter @aitype/backend",
    "lint-fe": "turbo run lint --filter @aitype/frontend",
    "lint-pkg": "turbo run lint --filter=\"./packages/*\"",
    "oxlint": "turbo run oxlint",
    "oxlint-be": "turbo run oxlint --filter @aitype/backend",
    "oxlint-fe": "turbo run oxlint --filter @aitype/frontend",
    "oxlint-pkg": "turbo run oxlint --filter=\"./packages/*\"",
    "build": "turbo run build",
    "build-be": "turbo run build --filter @aitype/backend",
    "build-fe": "turbo run build --filter @aitype/frontend",
    "build-pkg": "turbo run build --filter=\"./packages/*\"",
    "test": "turbo run test integration-test",
    "test-be": "turbo run test integration-test --filter @aitype/backend",
    "test-fe": "turbo run test --filter @aitype/frontend",
    "test-pkg": "turbo run test --filter=\"./packages/*\"",
    "dev": "turbo run dev --force",
    "dev-be": "turbo run dev --force --filter @aitype/backend",
    "dev-fe": "turbo run dev --force --filter @aitype/frontend",
    "dev-pkg": "turbo run dev --force --filter=\"./packages/*\"",
    "start": "turbo run start",
    "start-be": "turbo run start --filter @aitype/backend",
    "start-fe": "turbo run start --filter @aitype/frontend",
    "docker": "cd backend && docker compose up",
    "audit-fe": "cd frontend && npm run audit",
    "release": "aitype-release",
    "release-fe": "aitype-release --fe",
    "release-be": "aitype-release --be",
    "release-no-deploy": "aitype-release --no-deploy",
    "release-dry": "aitype-release --dry",
    "hotfix": "aitype-release --hotfix",
    "hotfix-fe": "aitype-release --hotfix --fe",
    "hotfix-be": "aitype-release --hotfix --be",
    "hotfix-dry": "aitype-release --hotfix --dry",
    "pretty-check": "prettier --check .",
    "pretty-check-be": "prettier --check ./backend",
    "pretty-check-fe": "prettier --check ./frontend/src",
    "pretty-check-assets": "prettier --check ./frontend/static",
    "pretty-check-pkg": "prettier --check ./packages",
    "pretty-fix": "prettier --write .",
    "pretty-fix-be": "prettier --write ./backend",
    "pretty-fix-fe": "prettier --write ./frontend/src",
    "pretty-fix-assets": "prettier --write ./frontend/static",
    "pretty-fix-pkg": "prettier --write ./packages",
    "lint-json-assets": "cd frontend && eslint \"./static/**/*.json\"",
    "validate-json": "turbo validate-json --filter @aitype/frontend",
    "check-quote-assets": "turbo validate-json --filter @aitype/frontend  -- quotes",
    "check-language-assets": "turbo validate-json --filter @aitype/frontend  -- languages",
    "check-other-assets": "turbo validate-json --filter @aitype/frontend  -- others",
    "knip": "knip"
  },
  "engines": {
    "node": "20.19.4"
  },
  "devDependencies": {
    "@commitlint/cli": "17.7.1",
    "@commitlint/config-conventional": "19.2.2",
    "@aitype/release": "workspace:*",
    "conventional-changelog": "6.0.0",
    "eslint": "8.57.1",
    "husky": "8.0.1",
    "knip": "2.19.2",
    "lint-staged": "13.2.3",
    "only-allow": "1.2.1",
    "oxlint": "1.12.0",
    "prettier": "2.8.8",
    "turbo": "2.5.6",
    "vitest": "3.2.4"
  },
  "lint-staged": {
    "*.{json,scss,css,html}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "prettier --write",
      "oxlint",
      "eslint"
    ]
  },
  "version": "25.32.0",
  "packageManager": "pnpm@9.6.0"
}
